<%- include('header') %>

<% 
    // ÂÆö‰πâÁ±ªÂà´ÈªòËÆ§Âõæ
    const categoryImages = {
        'Vegetables': 'https://images.unsplash.com/photo-1566385101042-1a0aa0c1268c?auto=format&fit=crop&w=400&q=80',
        'Fruits': 'https://images.unsplash.com/photo-1610832958506-aa56368176cf?auto=format&fit=crop&w=400&q=80',
        'Bakery': 'https://images.unsplash.com/photo-1509440159596-0249088772ff?auto=format&fit=crop&w=400&q=80',
        'Meals': 'https://images.unsplash.com/photo-1546069901-ba9599a7e63c?auto=format&fit=crop&w=400&q=80',
        'Drinks': 'https://images.unsplash.com/photo-1622483767028-3f66f32aef97?auto=format&fit=crop&w=400&q=80',
        'Other': 'https://images.unsplash.com/photo-1498837167922-ddd27525d352?auto=format&fit=crop&w=400&q=80'
    };
%>

<% if (user.userType === 'donor') { %>
    
    <div class="row">
        <div class="col-md-4">
            <div class="card p-3 mb-4 border-primary shadow-sm">
                <h4 class="text-primary mb-3">Add Food Listing</h4>
                <form action="/add-food" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">Food Name</label>
                        <input type="text" name="name" placeholder="e.g. Fresh Salad" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <select name="category" class="form-select" required>
                            <option value="Vegetables">ü•¶ Vegetables</option>
                            <option value="Fruits">üçé Fruits</option>
                            <option value="Bakery">üçû Bakery</option>
                            <option value="Meals">üç± Cooked Meals</option>
                            <option value="Drinks">ü•§ Drinks</option>
                            <option value="Other">üì¶ Other</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Upload Photo (Optional)</label>
                        <input type="file" name="imageFile" class="form-control" accept="image/*">
                        <div class="form-text text-muted" style="font-size: 0.75rem;">Max 1MB. If empty, auto-image is used.</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="description" placeholder="Details..." class="form-control" rows="2"></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Expiry Date</label>
                        <input type="date" name="expiryDate" class="form-control" 
                               min="<%= new Date().toISOString().split('T')[0] %>" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Quantity</label>
                        <input type="number" name="quantity" placeholder="1" class="form-control" min="1" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 py-2">Post Listing</button>
                </form>
            </div>
        </div>

        <div class="col-md-8">
            
            <style>
                .scrollable-list {
                    max-height: 380px; /* Âõ∫ÂÆöÈ´òÂ∫¶ */
                    overflow-y: auto;  /* Ë∂ÖÂá∫ÈÉ®ÂàÜÊòæÁ§∫ÊªöÂä®Êù° */
                }
                /* ÁæéÂåñÊªöÂä®Êù° */
                .scrollable-list::-webkit-scrollbar { width: 6px; }
                .scrollable-list::-webkit-scrollbar-thumb { background: #ccc; border-radius: 4px; }
            </style>

            <% 
                // Êï∞ÊçÆÂàÜÁ±ª
                const reservedList = foods.filter(f => f.status === 'Reserved');
                const availableList = foods.filter(f => f.status === 'Available');
                const pickedUpList = foods.filter(f => f.status === 'Picked Up');
            %>

            <div class="card mb-4 border-warning">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">üîî Action Required (Ready to Hand Over)</h5>
                    <span class="badge bg-light text-dark"><%= reservedList.length %></span>
                </div>
                
                <div class="card-body p-2 scrollable-list">
                    
                    <% if (reservedList.length === 0) { %>
                        <p class="text-muted text-center my-3">No pending orders. Good job!</p>
                    <% } %>

                    <% reservedList.forEach(food => { %>
                        <% 
                            let displayImage = categoryImages[food.category || 'Other']; 
                            if (food.imageUrl && food.imageUrl.length > 10) { displayImage = food.imageUrl; }
                        %>
                        <div class="card mb-2 border-warning shadow-sm">
                            <div class="row g-0">
                                <div class="col-md-3">
                                    <img src="<%= displayImage %>" class="img-fluid rounded-start h-100" style="object-fit: cover; min-height: 100px;">
                                </div>
                                <div class="col-md-9">
                                    <div class="card-body py-2">
                                        <div class="d-flex justify-content-between">
                                            <h5 class="card-title mb-1"><%= food.name %></h5>
                                            <span class="badge bg-warning text-dark">Reserved</span>
                                        </div>
                                        <small class="text-muted">Reserved by: <strong><%= food.reservedBy ? food.reservedBy.name : 'Unknown' %></strong></small>
                                        <p class="card-text small mb-1">Qty: <strong><%= food.quantity %></strong> | Exp: <%= food.expiryDate %></p>
                                        
                                        <form action="/mark-picked-up/<%= food._id %>" method="POST" class="mt-1">
                                            <button type="submit" class="btn btn-warning btn-sm w-100">Confirm Pickup (Hand Over)</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>

            <div class="card mb-4 border-primary">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">üü¢ Active Listings (On Shelf)</h5>
                    <span class="badge bg-light text-primary"><%= availableList.length %></span>
                </div>

                <div class="card-body p-2 scrollable-list">
                    
                    <% if (availableList.length === 0) { %>
                        <p class="text-muted text-center my-3">You have no food listed.</p>
                    <% } %>

                    <% availableList.forEach(food => { %>
                        <% 
                            let displayImage = categoryImages[food.category || 'Other']; 
                            if (food.imageUrl && food.imageUrl.length > 10) { displayImage = food.imageUrl; }
                        %>
                        <div class="card mb-2 border-primary shadow-sm">
                            <div class="row g-0">
                                <div class="col-md-3">
                                    <img src="<%= displayImage %>" class="img-fluid rounded-start h-100" style="object-fit: cover; min-height: 100px;">
                                </div>
                                <div class="col-md-9">
                                    <div class="card-body py-2">
                                        <div class="d-flex justify-content-between">
                                            <h5 class="card-title mb-1"><%= food.name %></h5>
                                            <form action="/delete-food/<%= food._id %>" method="POST" onsubmit="return confirm('Delete this listing?');">
                                                <button type="submit" class="btn btn-sm btn-close"></button>
                                            </form>
                                        </div>
                                        <span class="badge bg-secondary mb-1"><%= food.category || 'Other' %></span>
                                        <p class="card-text small text-muted mb-0">
                                            Qty: <strong><%= food.quantity %></strong> | Exp: <%= food.expiryDate %> <br>
                                            <%= food.description %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>

            <div class="card mb-4 border-secondary">
                <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">üìú Transaction History</h5>
                    <span class="badge bg-light text-secondary"><%= pickedUpList.length %></span>
                </div>

                <div class="card-body p-2 scrollable-list">
                    
                    <% if (pickedUpList.length === 0) { %>
                        <p class="text-muted text-center my-3">No history yet.</p>
                    <% } %>

                    <% pickedUpList.forEach(food => { %>
                        <% 
                            let displayImage = categoryImages[food.category || 'Other']; 
                            if (food.imageUrl && food.imageUrl.length > 10) { displayImage = food.imageUrl; }
                        %>
                        <div class="card mb-2 border-light bg-light">
                            <div class="row g-0">
                                <div class="col-md-2">
                                    <img src="<%= displayImage %>" class="img-fluid rounded-start h-100" style="object-fit: cover; opacity: 0.6;">
                                </div>
                                <div class="col-md-10">
                                    <div class="card-body py-2">
                                        <div class="d-flex justify-content-between">
                                            <strong class="text-muted"><%= food.name %></strong>
                                            <form action="/delete-food/<%= food._id %>" method="POST" onsubmit="return confirm('Remove from history?');">
                                                <button type="submit" class="btn btn-sm btn-close"></button>
                                            </form>
                                        </div>
                                        <small class="text-muted">Completed. Qty: <%= food.quantity %></small>
                                        
                                        <% if (food.rating > 0) { %>
                                            <div class="alert alert-success p-1 mb-0 mt-1">
                                                <small><strong>Review:</strong> <%= food.rating %>‚òÖ "<%= food.reviewComment %>"</small>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>

        </div>
    </div>

<% } else { %>

    <div class="row mb-4">
        <div class="col-md-12">
            <form action="/dashboard" method="GET">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="üîç Search food name..." value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                    <button class="btn btn-primary" type="submit">Search</button>
                    <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
                        <a href="/dashboard" class="btn btn-outline-secondary">Clear</a>
                    <% } %>
                </div>
            </form>
        </div>
    </div>
    
    <style>
        .scrollable-box { max-height: 400px; overflow-y: auto; }
        .scrollable-box::-webkit-scrollbar { width: 6px; }
        .scrollable-box::-webkit-scrollbar-thumb { background: #ccc; border-radius: 4px; }
    </style>

    <div class="row mb-5">
        <div class="col-md-6">
            <div class="card border-primary h-100 shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between">
                    <h5 class="mb-0">‚è≥ Active</h5>
                    <span class="badge bg-light text-primary">To Pick Up</span>
                </div>
                <div class="card-body scrollable-box">
                    <% const activeList = myReservations.filter(f => f.status === 'Reserved'); %>
                    <% if (activeList.length === 0) { %> <p class="text-muted text-center mt-4">Empty.</p> <% } %>
                    <% activeList.forEach(food => { %>
                        <div class="alert alert-light border shadow-sm">
                            <div class="d-flex justify-content-between">
                                <strong><%= food.name %></strong>
                                <span class="badge bg-warning text-dark">Qty: <%= food.quantity %></span>
                            </div>
                            <small class="text-muted">Code: <strong><%= food._id.toString().slice(-4) %></strong></small>
                            <div class="text-end mt-1">
                                <form action="/delete-reservation/<%= food._id %>" method="POST" onsubmit="return confirm('Cancel?');">
                                    <button class="btn btn-sm btn-outline-danger py-0">Cancel</button>
                                </form>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-secondary h-100 shadow-sm">
                <div class="card-header bg-secondary text-white d-flex justify-content-between">
                    <h5 class="mb-0">üìú History</h5>
                    <span class="badge bg-light text-secondary">Picked Up</span>
                </div>
                <div class="card-body scrollable-box">
                    <% const historyList = myReservations.filter(f => f.status === 'Picked Up'); %>
                    <% if (historyList.length === 0) { %> <p class="text-muted text-center mt-4">No history.</p> <% } %>
                    <% historyList.forEach(food => { %>
                        <div class="alert alert-light border bg-light">
                            <div class="d-flex justify-content-between">
                                <strong><%= food.name %></strong>
                                <form action="/delete-reservation/<%= food._id %>" method="POST" onsubmit="return confirm('Remove?');">
                                    <button class="btn-close btn-sm"></button>
                                </form>
                            </div>
                            <% if (food.rating === 0) { %>
                                <hr class="my-1">
                                <form action="/review/<%= food._id %>" method="POST" class="d-flex gap-1">
                                    <select name="rating" class="form-select form-select-sm" style="width:60px">
                                        <option value="5">5</option><option value="4">4</option><option value="3">3</option>
                                    </select>
                                    <input type="text" name="reviewComment" class="form-control form-control-sm" placeholder="Comment...">
                                    <button class="btn btn-success btn-sm">OK</button>
                                </form>
                                <form action="/skip-review/<%= food._id %>" method="POST" class="text-end mt-1">
                                    <button class="btn btn-link btn-sm p-0 text-muted text-decoration-none" style="font-size:12px">Skip Review</button>
                                </form>
                            <% } else if (food.rating > 0) { %>
                                <small class="text-success d-block mt-1">You rated: <%= food.rating %>‚òÖ</small>
                            <% } %>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <h4 class="mb-3">Available Food Nearby</h4>
    
    <% if (foods.length === 0) { %>
        <div class="alert alert-warning text-center">
            No food matches your search right now. <a href="/dashboard" class="alert-link">Show All</a>
        </div>
    <% } %>

    <div class="row">
        <% foods.forEach(food => { %>
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    
                    <% 
                        let displayImage = categoryImages[food.category || 'Other']; 
                        if (food.imageUrl && food.imageUrl.length > 10) { 
                            displayImage = food.imageUrl; 
                        }
                    %>
                    <img src="<%= displayImage %>" class="card-img-top" alt="Food" style="height: 180px; object-fit: cover;">
                    
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="card-title mb-0 text-truncate" style="max-width: 70%;" title="<%= food.name %>">
                                <%= food.name %>
                            </h5>
                            <span class="badge bg-info text-dark">Stock: <%= food.quantity %></span>
                        </div>

                        <p class="text-muted small mb-2">
                            <i class="bi bi-person"></i> From: 
                            <% if (food.donor) { %>
                                <a href="/donor-reviews/<%= food.donor._id %>" class="text-decoration-none fw-bold text-primary">
                                    <%= food.donor.name %> üîó
                                </a>
                            <% } else { %>
                                Unknown
                            <% } %>
                        </p>

                        <div class="mb-2">
                            <span class="badge bg-secondary"><%= food.category || 'Other' %></span>
                        </div>
                        <p class="card-text text-muted small flex-grow-1">
                            <%= food.description || 'No description provided.' %>
                        </p>
                        
                        <div class="text-muted small mb-3">
                            üìÖ Expires: <strong><%= food.expiryDate %></strong>
                        </div>

                        <form action="/reserve/<%= food._id %>" method="POST" class="mt-auto">
                            <div class="input-group">
                                <span class="input-group-text bg-light">Qty</span>
                                <input type="number" name="reserveQty" class="form-control text-center" value="1" min="1" max="<%= food.quantity %>" required>
                                <button class="btn btn-primary px-4">Reserve</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        <% }) %>
    </div>

<% } %>

</body>
</html>